<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title </title>

    <!-- CSS filerna, en blir hämtat ifrån bootstrap sidan som konstant är uppdaterad -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />*@

    <!-- Javascript filerna -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <!-- jQuery, ger bakgrund till NAV och gör att den transitiona snyggt. -->
    <script src="~/Scripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript, Gör inget?  -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Plugin JavaScript, gör så att det blir en flytande övergång till olika sections -->
    <script src="~/Scripts/jquery.easing.min.js"></script>

    <!-- Huvud-js-filen för Naven att fungera , som sätter ihop allt. -->
    <script src="~/Scripts/grayscale.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>


    <!-- Hämtade Fonts, kan hämta nya enkelt -->
    <link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">

</head>
<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <!-- Texten och knapp för att komma till toppen. -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <!-- Förslag att göra en liten kaffekopp ikon här, som logotyp -->
                </button>
                <a class="navbar-brand page-scroll" href="~/Home/Index"> <!-- Länk till förstasidan -->
                    <span class="light">Brew</span> Brothers
                </a>
            </div>

            <!-- Lista med nav länkarna -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="~/Home/Index">About</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="~/Product/Index">Webshop</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="~/Home/Index">Contact</a>
                    </li>

                    <!-- ------------- Dropdown shoppingcart ----------------------- -->

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <span class="glyphicon glyphicon-shopping-cart"></span> @Session["amountInCart"] - Items<span class="caret"></span>
                        </a>

                        <!-- ------------- Här ändrar du färg på bakgrunden i shoppingcarten ----------------------- -->
                        <ul class="dropdown-menu dropdown-cart" style="background-color:#C15A2D;" role="menu">
                            @{Html.RenderAction("shoppingCartPartial", "Home");}
                            
                            <li class="divider"></li>
                            <li><a class="text-center" href="/shoppingCart/index">View Cart</a></li>
                            <li><a class="text-center" style="color:black" href="/shoppingCart/CheckOut">Checkout</a></li>
                            <li><a class="text-center" href="">Total: @Session["totalPrice"] kr</a></li>
                        </ul>
                    </li>

                    <!-- ------------- slutet av shoppingcart ----------------------- -->
                    @{
                        if ((bool)Session["userLoggedIn"])
                        {
                            <li>
                                <a class="page-scroll" style="visibility:visible" href="~/Login/LogOut">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="page-scroll" style="visibility:visible" href="~/User/Register">Register</a>
                            </li>
                        }
                    }
                    @*@Session["loggedInMessage"]*@

                </ul>
            </div>
        </div>
    </nav>

        <div class="container body-content">
            @RenderBody()
            <footer>
                <div class="container text-center">
                    <p>Copyright &copy; @DateTime.Now.Year - Bean Brothers Brews</p>
                </div>             
            </footer>
        </div>
      
</body>
</html>