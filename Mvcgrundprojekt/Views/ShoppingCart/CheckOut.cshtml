@model IEnumerable<Mvcgrundprojekt.Models.CheckOutModel>

<br />
<br />
<br />
<body class="checkout-section-body">
    <section class="checkout-section">
        <div class="container">
            <h2 class="checkout-header">Checkout</h2>

            @{
                if (Model.Any())
                {
                    <text>Total: </text> @Model.First().totalPrice
    }
    else
    {
                    <text>Total: 0 &dollar;</text>
                }
             }
            <table class="table">
                <tr>
                    <th class="view-shoppingcart-table">
                        Product
                    </th>
                    <th class="view-shoppingcart-table">
                        
                    </th>
                    <th class="view-shoppingcart-table">
                        Amount
                    </th>
                    <th class="view-shoppingcart-table">
                        &#x00024; / each
                    </th>
                    <th class="view-shoppingcart-table">
                        Total
                    </th>
                </tr>               

                @foreach (var item in Model)
                {
                    @Html.DisplayFor(modelItem => item.TotalAmountPerID)
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td id="table-small-image">
                            <img class="thumbnail img-responsive" id="shoppingcart-img" src="@item.imgUrl" />
                        </td>
                        <td>
                            <a href="@Url.Action("AddToCartInsideCart", "ShoppingCart", new { item.ProductID })"><span class="glyphicon glyphicon-plus"></span></a>
                            @Html.DisplayFor(modelItem => item.TotalAmountPerID)
                            <a href="@Url.Action("DeleteInsideCart", "ShoppingCart", new { item.ProductID })"><span class="glyphicon glyphicon-minus"></span></a>
                        </td>
                        <td>
                            @item.PricePerProduct
                        </td>
                        <td>
                            @{ 
                                int price = item.PricePerProduct * item.TotalAmountPerID;
                            }
                            @price
                        </td>
                    </tr>
                }
            </table>

            @*/* ------------------------------------------------------ */
            /* Här kommer användarinformationen innan checkout */
            /* ------------------------------------------------------ */*@

            <br />
            <hr />
            <center><h2>User information</h2></center>
            

            @foreach (var item in Model.Take(1))
            {
                <div class="col-lg-12 text-center">
                    @Html.DisplayFor(modelItem => item.Firstname) <text> </text>
                    @Html.DisplayFor(modelItem => item.Lastname)<br />
                    @Html.DisplayFor(modelItem => item.Address)<br />
                    @Html.DisplayFor(modelItem => item.Personnumber)<br />
                    @Html.DisplayFor(modelItem => item.PhoneNumber)<br />
                    @Html.DisplayFor(modelItem => item.Email)<br />
                </div>
            }


                <center><a href="#" class="btn btn-default btn-lg" id="checkout-btn">Confirm Payment</a></center>
            </div>
    </section>
</body>




